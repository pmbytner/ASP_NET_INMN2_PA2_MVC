@model IEnumerable<ASP_NET_INMN2_PA2_MVC.Models.Miasto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form>
    <p>
        <label for="id">Nazwa zawiera: </label>
        <input name="id" value="@ViewData["id"]"/>
        <input type="submit" value="Filtruj"/>
    </p>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Powierzchnia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Populacja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Miasto miasto in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => miasto.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => miasto.Powierzchnia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => miasto.Populacja)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@miasto.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@miasto.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@miasto.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
